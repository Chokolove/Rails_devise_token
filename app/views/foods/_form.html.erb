<%= form_with model: food do |form| %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price, step: :any %>
  </div>

  <div>
    <%= link_to 'Cancel', :back %>
    <%= form.submit %>
  </div>

<% end %>